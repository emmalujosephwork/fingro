<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tracker - FinGro</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/tracker.css">
    <!-- Tracker-specific CSS -->
</head>

<body>

    <!-- Navigation Bar -->
    <nav class="navbar-custom">
        <div class="nav-wrapper">
            <a href="/" class="brand-logo">FinGro</a>
            <ul id="nav-mobile" class="right hide-on-med-and-down">
                <li><a href="/">Home</a></li>
                <li><a href="/about">About</a></li>
                <li><a href="/contact">Contact</a></li>

                <% if (username) { %>
                    <li><span class="welcome-text">Welcome, <%= username %>!</span></li>
                    <li><a href="/logout">Logout</a></li>
                    <% } else { %>
                        <li><a href="/login">Login</a></li>
                        <% } %>
            </ul>
        </div>
    </nav>

    <!-- Main Tracker Section -->
    <div class="container">
        <h4 class="center-align pink-text text-lighten-2">Expense and Savings Tracker</h4>

        <!-- Expenses Section -->
        <div class="section">
            <h5 class="pink-text">Track Expenses</h5>
            <table class="highlight centered responsive-table">
                <thead>
                    <tr>
                        <th>Description</th>
                        <th>Amount</th>
                        <th>Category</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody id="expense-list">
                    <!-- Dynamic Data -->
                </tbody>
            </table>
        </div>

        <!-- Savings Goals Section -->
        <div class="section">
            <h5 class="pink-text">Savings Goals</h5>
            <table class="highlight centered responsive-table">
                <thead>
                    <tr>
                        <th>Goal Name</th>
                        <th>Target Amount</th>
                        <th>Saved Amount</th>
                        <th>Due Date</th>
                    </tr>
                </thead>
                <tbody id="goal-list">
                    <!-- Dynamic Data -->
                </tbody>
            </table>
        </div>
    </div>

    <!-- Footer Section -->
    <footer class="page-footer pink">
        <div class="container">
            <div class="row">
                <div class="col s12 center-align">
                    <p class="white-text">Copyright Â© FinGro</p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Include Tracker JS -->
    <script src="/js/tracker.js"></script>
</body>

</html>